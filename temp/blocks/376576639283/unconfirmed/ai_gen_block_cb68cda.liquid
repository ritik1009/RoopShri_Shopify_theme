    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "padding",
      "label": "Padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#121212"
    }
  ],
  "presets": [
    {
      "name": "Glowing heading"
    }
  ],
  "tag": null
}
{% endschema %}